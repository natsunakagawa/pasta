<% if @book.errors.any? %>
	<%= render 'layouts/book_edit', book: @book %>
<% else %>

	<%= render 'layouts/form', user: @user, book: @book %>

	<div class="col-xs-9">
		
		<h1>Book detail</h1>

		<table class="table">
			<% if @user == current_user %>
				<thead>
					<tr>
						<th></th>
						<th colspan="2"></th>
						<th colspan="2"></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
							<%= link_to user_path(@user) do %>
								<%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
								<%= @user.name %>
							<% end %>
						</td>
						<td>
							<%= @mybook.title %>
						</td>
						<td>
							<%= @mybook.body %>
						</td>
						<td>
							<%= link_to "Edit", edit_book_path(@mybook), class: "btn btn-success" %>
						</td>
						<td>
							<%= link_to "Destroy", book_path(@mybook), method: :delete, data: {confirm: "本当に消しますか?"}, class: "btn btn-danger" %>
						</td>
					</tr>
				</tbody>
			<% else %>
				<thead>
					<tr>
						<th></th>
						<th colspan="2"></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
							<%= link_to user_path(@user) do %>
								<%= attachment_image_tag @user, :profile_image, :fill, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
								<%= @user.name %>
							<% end %>
						</td>
						<td>
							<%= @mybook.title %>
						</td>
						<td>
							<%= @mybook.body %>
						</td>
					</tr>
				</tbody>

			<% end %>
		</table>

	</div>
<% end %>