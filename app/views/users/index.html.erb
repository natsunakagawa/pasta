<%= render 'layouts/form', user: @user, book: @book %>

<div class="col-lg-9">
	
	<h1>Users</h1>

	<table class="table">
		<thead>
			<tr>
				<th>image</th>
				<th>name/th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr>
					<td>
						<%= attachment_image_tag user, :profile_image, :fill, 20, 20, format: 'jpeg', fallback: "no_image.jpg" %>
					</td>
					<td>
						<%= user.name %>
					</td>
					<td>
						<%= link_to "Show", user_path(user) %> 
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

</div>