<div class="col-lg-9">
	
	<h1>Books</h1>

	<table class="table">
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
		</thead>
		<tbody>
			<% books.each do |book| %>
				<tr>
					<td>
						<%= link_to user_path(book.user) do %>
							<%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg" %>
						<% end %>
					</td>
					<td>
						<%= link_to book_path(book) do %>
							<%= book.title %>
						<% end %>
					</td>
					<td>
						<%= book.body %>
					</td>
				</tr>
		</tbody>
	</table>

</div>