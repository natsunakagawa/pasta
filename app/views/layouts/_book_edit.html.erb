<div class="col-xs-3"></div>
<div class="col-xs-6">
	<h1>Editing Book</h1>

	<% if book.errors.any? %>
		<div class="alert">
			<h2><%= pluralize(book.errors.count, "error")%> prohibited this obj from being saved:</h2>

			<ul>
				<% book.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<%= form_for(book) do |f| %>
			
		<div class="block">
			<%= f.label :title %>
			<%= f.text_field :title, {class: 'visible-xs-bloc'} %>
						
		</div>
		<div class="block">
			<%= f.label :opinion %>
			<%= f.text_area :body %>
		</div>

		<%= f.submit('Update Book', class: 'btn btn-default btn-block') %>

	<% end %>

	<p>
		<%= link_to "Show", book_path(@book) %> |
		<%= link_to "Back", books_path %>
	</p>

</div>
